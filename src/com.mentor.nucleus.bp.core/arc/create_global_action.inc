			  Selection.getInstance().clear();
			  // Restore any elements that were not deleted.
			  Iterator it = selection.iterator();
			  while (it.hasNext()) {
			      Object next = it.next();
			      if ( next instanceof NonRootModelElement )
			      {
				    NonRootModelElement elem = (NonRootModelElement) next;
