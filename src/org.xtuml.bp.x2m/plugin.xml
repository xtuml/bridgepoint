<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

     <extension point="org.eclipse.ui.startup">
         <startup class="org.xtuml.bp.x2m.X2MPlugin"/>
     </extension>

     <extension
         id="org.xtuml.ui.x2m.Export"
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.xtuml.bp.x2m.contribution1"
            objectClass="org.xtuml.bp.core.Package_c">
         <action
               class="org.xtuml.bp.x2m.actions.ExportProjectAction"
               enablesFor="1"
               id="org.xtuml.bp.x2m.ExportProjectAction"
               label="Export MASL project"
               menubarPath="org.xtuml.bp.ui.context-internal">
         </action>
         <filter name="can" value="export project" />         
      </objectContribution>
      <objectContribution
            id="org.xtuml.bp.x2m.contribution2"
            objectClass="org.xtuml.bp.core.Package_c">
         <action
               class="org.xtuml.bp.x2m.actions.ExportDomainAction"
               enablesFor="1"
               id="org.xtuml.bp.x2m.ExportDomainAction"
               label="Export MASL domains"
               menubarPath="org.xtuml.bp.ui.context-internal">
         </action>
         <filter name="can" value="export project" />         
      </objectContribution>
      <objectContribution
            id="org.xtuml.bp.x2m.contribution3"
            objectClass="org.xtuml.bp.core.Component_c">
         <action
               class="org.xtuml.bp.x2m.actions.ExportDomainAction"
               enablesFor="1"
               id="org.xtuml.bp.x2m.ExportDomainAction"
               label="Export MASL domain"
               menubarPath="org.xtuml.bp.ui.context-internal">
         </action>
         <filter name="can" value="export domain" />                  
      </objectContribution>
      <objectContribution
            id="org.xtuml.bp.x2m.contribution4"
            objectClass="org.xtuml.bp.core.SystemModel_c">
         <action
               class="org.xtuml.bp.x2m.actions.RunMASLRefresherAction"
               enablesFor="1"
               id="org.xtuml.bp.x2m.RunMASLRefresherAction"
               label="Run MASL Refresher"
               menubarPath="org.xtuml.bp.ui.context-internal">
         </action>
         <filter name="can" value="run masl refresher" />         
      </objectContribution>
   </extension>
</plugin>
